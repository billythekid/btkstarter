{% import "_includes/forms" as forms %}
{% for plugin in settings.plugins %}
  {{ forms.checkboxField({
    label: plugin.name,
    instructions: plugin.description,
    id: plugin.pluginFolderName,
    name: plugin.pluginFolderName,
    checked: plugin.checked,
    value: plugin.downloadUrl ~ ' ' ~ plugin.pluginFolderName
  }) }}
{% endfor %}